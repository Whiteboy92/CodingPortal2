<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <title>Home</title>
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand">Akademia WIT</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-link"><a class="nav-link" asp-page="Index">Assignment List</a></li>
                    <li class="nav-link"><a class="nav-link" asp-page="SubmittedSolutions">Submitted Solutions</a></li>
                    <li class="nav-link"><a class="nav-link" asp-page="AssignmentCreation">Create Assignment</a></li>
                    <li class="nav-link"><a class="nav-link" asp-page="AddUsers">Add Users</a></li>
                    <li class="nav-link"><a class="nav-link" asp-page="UserList">User List</a></li>
                    <li class="nav-link"><a class="nav-link" asp-page="GroupList">Group List</a></li>
                    <li class="nav-link"><a class="nav-link" asp-page="TestTemplates">Test Templates</a></li>
                </ul>
                    <ul class="navbar-nav ml-auto">
                            <div>
                                @if (!string.IsNullOrEmpty(Model.Login))
                                {
                                    <div class="d-flex align-items-center">
                                        <span class="mr-2">Hello @Model.Login! You're an @Model.PermissionLevel.&nbsp;</span>
                                        @if (!string.IsNullOrEmpty(Model.LoggedAsLogin))
                                        {
                                            <span class="mr-2"> Logged in as @Model.LoggedAsLogin.</span>
                                            <form method="post">
                                                <a href="/LogoutasOtherUser" class="btn btn-primary border-light open-btn">Logout</a>
                                            </form>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span>Hello @Model.Login! You're an @Model.PermissionLevel.</span>
                                }
                            </div>
                    </ul>
            </div>
        </div>
    </nav>
</head>
<body>

@RenderBody()

</body>
</html>


