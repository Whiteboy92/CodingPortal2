<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <title>Teacher Home</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand">Akademia WIT</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-link"><a class="nav-link" asp-page="Index">Task List</a></li>
                    <li class="nav-link"><a class="nav-link" asp-page="AssignmentCreation">Create Task</a></li>
                    <li class="nav-link"><a class="nav-link" asp-page="SubmittedSolutions">Submitted Solutions</a></li>
                    <li class="nav-link"><a class="nav-link" asp-page="AddAllStudentUsers">Add AllStudentUsers</a></li>
                    <li class="nav-link"><a class="nav-link" asp-page="UserList">User List</a></li>
                    <li class="nav-link"><a class="nav-link" asp-page="GroupList">Group List</a></li>
                    <li class="nav-link"><a class="nav-link" asp-page="TestTemplates">Test Templates</a></li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (!string.IsNullOrEmpty(Model.Login))
                    {
                        <div>
                            <div class="d-flex align-items-center">
                                <span class="mr-2">Hello @Model.Login! You're a @Model.PermissionLevel.&nbsp;</span>
                                @if (!string.IsNullOrEmpty(Model.LoggedAsLogin))
                                {
                                    <span class="mr-2"> Logged in as @Model.LoggedAsLogin.</span>
                                    <form method="post">
                                        <button type="submit" class="btn">Logout</button>
                                    </form>
                                }
                            </div>
                        </div>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</body>
</html>
